<Window x:Class="HS_MySQL_WPF_Animals.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HS_MySQL_WPF_Animals"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Menu DockPanel.Dock="Top"
              HorizontalAlignment="Left"
              VerticalAlignment="Top"
              Width="793">

            <MenuItem x:Name="FileMenu"
                      Header="File">
                <MenuItem x:Name="Exit"
                          Header="Exit"/>
            </MenuItem>

            <MenuItem x:Name="Animals"
                      Header="Animals"/>
            <MenuItem x:Name="Users"
                      Header="Users"/>
            <MenuItem x:Name="Locations"
                      Header="Locations"/>
            <MenuItem x:Name="Help"
                      Header="Help">
                <MenuItem x:Name="About"
                          Header="About"/>
            </MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem></StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
